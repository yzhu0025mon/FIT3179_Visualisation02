{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 600,
  "title": "Categories of Shops with Liquor License (by Regions)",
  "data": {
    "url": "https://raw.githubusercontent.com/yzhu0025mon/FIT3179_Visualisation02/main/data/Fully_Processed_Data.json"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Barwon South-West",
          "Gippsland",
          "Grampians",
          "Hume",
          "Loddon Mallee",
          "Metro East",
          "Metro North",
          "Metro South",
          "Metro West",
          "North West"
        ],
        "labels": [
          "Show all",
          "Barwon South-West",
          "Gippsland",
          "Grampians",
          "Hume",
          "Loddon Mallee",
          "Metro East",
          "Metro North",
          "Metro South",
          "Metro West",
          "North West"
        ],
        "name": "Select regions: "
      }
    }
  ],
  "transform": [
    {"filter": "Region_selection == null || datum.Region == Region_selection"},
    {
      "aggregate": [{"op": "count", "as": "Count"}],
      "groupby": ["Category"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Category",
      "type": "ordinal",
      "sort": [
        "BYO Permit",
        "Full Club",
        "General",
        "Late Night",
        "Limited",
        "On-Premises",
        "Packaged Liquor",
        "Pre-retail",
        "Producer's",
        "Restaurant & cafe",
        "Restricted Club"
      ]
    },
    "y": {"field": "Count", "type": "quantitative"},
    "tooltip": [
      {"field": "Count", "type": "quantitative"}
    ]
  }
}
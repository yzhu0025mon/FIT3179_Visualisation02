{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 700,
  "height": 400,
  "title": "Maximum Capacities of Shops with Liquor License (by Regions)",
  "data": {
    "url": "https://raw.githubusercontent.com/yzhu0025mon/FIT3179_Visualisation02/main/data/Fully_Processed_Data.json"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Barwon South-West",
          "Gippsland",
          "Grampians",
          "Hume",
          "Loddon Mallee",
          "Metro East",
          "Metro North",
          "Metro South",
          "Metro West",
          "North West"
        ],
        "labels": [
          "Show all",
          "Barwon South-West",
          "Gippsland",
          "Grampians",
          "Hume",
          "Loddon Mallee",
          "Metro East",
          "Metro North",
          "Metro South",
          "Metro West",
          "North West"
        ],
        "name": "Select regions: "
      }
    }
  ],
  "transform": [
    {"filter": "Region_selection == null || datum.Region == Region_selection"},
    {
      "aggregate": [{"op": "count", "as": "Count"}],
      "groupby": ["Maximum Capacity"]
    }
  ],
  "encoding": {
    "x": {
      "field": "Maximum Capacity",
      "type": "ordinal",
      "sort": [
        "Less than 5",
        "Between 5 and 19",
        "Between 20 and 49",
        "Between 50 and 99",
        "Between 100 and 199",
        "Between 200 and 499",
        "More than 499",
        "Unspecified"
      ]
    },
    "y": {"field": "Count", "type": "quantitative"},
    "tooltip": [
      {"field": "Count", "type": "quantitative"}
    ]
  },
  "layer": [{
    "mark": "bar"
  }, {
    "mark": {
      "type": "text",
      "align": "center",
      "baseline": "bottom",
      "dy": -3
    },
    "encoding": {
      "text": {"field": "Count", "type": "quantitative"}
    }
  }]
}
